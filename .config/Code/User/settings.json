{
    "keyboard.dispatch": "keyCode",
    "editor.fontFamily": "'JetBrainsMono Nerd Font Mono', 'FiraCode Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace",
    // "editor.fontLigatures": true,
    "editor.fontSize": 17,
    "window.zoomLevel": 2,
    "editor.lineNumbers": "relative",
    "window.menuBarVisibility": "toggle",
    "editor.minimap.enabled": false,
    "workbench.activityBar.location": "hidden",
    "window.titleBarStyle": "native",
    "window.customTitleBarVisibility": "never",

    // Vim Configuration
    "vim.useSystemClipboard": true, // Use the System's Clipboard
    "vim.leader": " ", // Leader key configuration
    
    // Normal mode keybindings
    "vim.normalModeKeyBindings": [
        // Buffer navigation
        { "before": ["<S-h>"], "commands": [":bprevious"] },
        { "before": ["<S-l>"], "commands": [":bnext"] },
        
        // Splits
        { "before": ["<leader>", "v"], "commands": [":vsplit"] },
        { "before": ["<leader>", "s"], "commands": [":split"] },
        
        // Window navigation
        { "before": ["<leader>", "h"], "after": ["<C-w>", "h"] },
        { "before": ["<leader>", "j"], "after": ["<C-w>", "j"] },
        { "before": ["<leader>", "k"], "after": ["<C-w>", "k"] },
        { "before": ["<leader>", "l"], "after": ["<C-w>", "l"] }
    ],
    
    // General Vim settings
    "vim.hlsearch": false,
    "vim.incsearch": true,
    "vim.ignorecase": true,
    "vim.smartcase": true,
    "vim.useCtrlKeys": true,
    
    // Editor configurations that match your Neovim settings
    "editor.cursorLine": true,
    "editor.rulers": [80],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.autoIndent": "advanced",
    "editor.detectIndentation": true,
    
    // Split behavior
    "workbench.editor.splitInGroupLayout": "vertical",
    "workbench.editor.openSideBySideDirection": "right",
    
    "cmake.configureSettings": {
    },
    "workbench.settings.applyToAllProfiles": [

    ],
    "workbench.colorTheme": "Gruvbox Dark Hard",
    "liveServer.settings.CustomBrowser": "chrome",
    "json.schemas": []
}
