{
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always",
          },
        },
      },
      "enable_lsp_tasks": true,
    },
  },
  "vim_mode": true,
  "relative_line_numbers": "enabled",
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "icon_theme": "Zed (Default)",
  "ui_font_size": 17,
  "buffer_font_size": 17,
  "format_on_save": "off", // instead use ctrl+shift+i to format
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light Hard",
    "dark": "Gruvbox Dark Hard",
  },
}
